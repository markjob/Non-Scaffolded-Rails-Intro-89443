<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<% @posts.each do |post|%>
<h3><%=post.title %></h3>
<div><%=post.content%></div>
<p>
  <%= link_to 'Delete this post', @post, :method => :delete, :data => {:confirm => 'Are you sure?'} %>
</p>
<% end %>

<p>
  <%= link_to 'Create new blog post', new_post_path %>
</p>

